<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_lg"
        android:gravity="center_horizontal">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/ivProfilePicture"
            android:layout_width="@dimen/profile_picture_large"
            android:layout_height="@dimen/profile_picture_large"
            android:src="@android:drawable/ic_menu_gallery"
            android:scaleType="centerCrop"
            android:contentDescription="Profile picture"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_marginTop="@dimen/spacing_lg" />

        <!-- Name -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_xl"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="@dimen/spacing_md" />

        <!-- Campus -->
        <TextView
            android:id="@+id/tvCampus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_sm"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="@dimen/spacing_xs" />

        <!-- Bio -->
        <TextView
            android:id="@+id/tvBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_md"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="@dimen/spacing_md" />

        <!-- Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_lg"
            android:gravity="center">

            <!-- Swaps -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvSwapsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/text_xl"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_swaps"
                    android:textSize="@dimen/text_xs"
                    android:textColor="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

            <!-- Hours -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvHoursCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/text_xl"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_hours"
                    android:textSize="@dimen/text_xs"
                    android:textColor="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

            <!-- Rating -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€”"
                    android:textSize="@dimen/text_xl"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_rating"
                    android:textSize="@dimen/text_xs"
                    android:textColor="?attr/colorOnSurfaceVariant" />
            </LinearLayout>
        </LinearLayout>

        <!-- Joined Date -->
        <TextView
            android:id="@+id/tvJoinedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_xs"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="@dimen/spacing_lg" />

        <!-- Edit Profile Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditProfile"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="@string/edit_profile_title"
            android:textSize="@dimen/text_md"
            app:cornerRadius="@dimen/button_corner_radius"
            android:layout_marginTop="@dimen/spacing_md"
            xmlns:app="http://schemas.android.com/apk/res-auto" />

        <!-- Logout Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="@string/btn_logout"
            android:textSize="@dimen/text_md"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="@dimen/spacing_sm" />

        <!-- Loading Indicator -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            android:layout_marginTop="@dimen/spacing_md"
            xmlns:app="http://schemas.android.com/apk/res-auto" />

    </LinearLayout>
</ScrollView>
